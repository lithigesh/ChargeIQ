<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Force light theme even when the OS Dark Mode setting is on.
         The app is light-mode only; using a dark Android theme causes the
         Google Navigation SDK native view to render in dark mode regardless
         of any Flutter or SDK API calls. -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
